<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/card_edge"
        android:gravity="center_vertical|center"
        android:padding="2dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/review_title"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:text="review title"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/review_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_title"
            android:paddingLeft="6dp"
            android:textStyle="italic"
            android:text="review details"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_details"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="review content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            android:visibility="visible" />

        <!--<ImageView-->
            <!--android:id="@+id/review_arrow"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_above="@+id/review_details"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:contentDescription="expand review"-->
            <!--android:src="@mipmap/ic_expand_more_white_48dp" />-->

    </RelativeLayout>


</android.support.v7.widget.CardView>
