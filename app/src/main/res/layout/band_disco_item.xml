<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disco_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:paddingStart="5dp"
    android:paddingLeft="5dp"
    android:paddingEnd="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="album cover art"
        android:src="@mipmap/ic_album_black_48dp" />

    <TextView
        android:id="@+id/disco_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="title"
        android:fontFamily="@font/dosis_light"
        android:textColor="#cccccc"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/disco_item_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/disco_item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_title"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="year"
        android:fontFamily="@font/dosis_light"
        android:textColor="#cccccc"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/disco_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/disco_item_year"
        android:layout_toRightOf="@id/disco_item_year"
        android:layout_below="@id/disco_item_title"
        android:text="format"
        android:fontFamily="@font/dosis_light"
        android:textColor="#cccccc"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/disco_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_year"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:textColor="#cccccc"
        android:text="score"
        android:fontFamily="@font/dosis_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/disco_item_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_score"
        android:visibility="gone" />


</RelativeLayout>