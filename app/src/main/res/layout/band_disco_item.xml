<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disco_item"
    android:layout_width="wrap_content"
    android:layout_height="80dip"
    android:padding="2dip"
    android:layout_marginRight="50dip"
    android:layout_marginEnd="50dip"
    android:background="@color/cardview_light_background"
    android:gravity="center_vertical">

    <ImageView
    android:id="@+id/album_cover"
    android:layout_width="?android:attr/listPreferredItemHeight"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:layout_centerVertical="true"
    android:layout_marginRight="6dip"
    android:layout_marginEnd="6dip"
    android:contentDescription="album cover art"
    android:src="@mipmap/ic_album_black_48dp"
    android:background="@color/cardview_light_background"/>

    <TextView
        android:id="@+id/disco_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/disco_item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="year"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/disco_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_year"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="format"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/disco_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="score"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/disco_item_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disco_item_score"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/album_cover"
        android:layout_toRightOf="@id/album_cover"
        android:text="reviews"
        android:textSize="12sp" />


</RelativeLayout>